	#DIFF=$(sed -e '1,3d; /^-$/d; /^+$/d' < $DIFF)

  #mta=/usr/bin/msmtp
  echo -e "Subject: $SUBJECT\n\n$GAMES" | /usr/bin/msmtp -a default $TO
#fi	

